<div class="container main-container">
  <div class="panel panel-default">
    <div class="panel-heading media">
      <div class="media-left avatar">
        <%= user_avatar_tag @topic.user, 45 %>
      </div>
      <div class="media-body">
        <div class="media-heading">
          <span class="node"><%= link_to @topic.node.name, node_path(@topic.node.id) %></span>
          <span class="topic-show-title"><%= @topic.title %></span>
        </div>
        <div class="media-info topic-show-info">
          <%= link_to @topic.user.nickname, user_path(@topic.user.nickname) %> 发布于 <%= time_ago_in_words(@topic.created_at) %> · 
          <% if @topic.replies_count > 0 %>
             最后由 <%= link_to @topic.last_reply_user_nickname, user_path(@topic.last_reply_user_nickname) %> 
             回复于 <%= time_ago_in_words @topic.last_reply_at %>
          <% end %>
        </div>
      </div> 
    </div>

    <div class="panel-body">
      <%= @topic.body %>
    </div>
  </div>


  <div class="panel panel-info">
    <div class="panel-heading">
      共收到 <%= @topic.replies_count %> 条回复
    </div>

    <% @replies.each do |reply| %>
    <div class="panel-body media reply-item">
      <div class="media-left col-md-2 reply-user-info">
        <div class="avatar">
          <%= link_to user_avatar_tag(reply.user, 80), user_path(reply.user.nickname) %>
        </div>
        <%= link_to reply.user.nickname, user_path(reply.user.nickname) %>
      </div>

      <div class="media-body reply-body">
        <div class="reply-content"><%= reply.body %></div>
        <div class="reply-date"><%= reply.created_at.strftime("%Y-%m-%d %H:%M") %></div>
      </div>
    </div>
    <% end %>
    
  </div>

  <%= render 'replies/reply' %>
</div>