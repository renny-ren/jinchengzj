<div class="container col-md-10">
<div class="panel panel-default">
  <div class="panel-heading"><%= header %></div>
  <div class="panel-body">
    <%= form_for @topic, remote: true do |f| %>
      <div class="form-group">
        <div class="input-group">
          <div class="input-group-btn">
            <button type="button" class="btn btn-info" id="node-selector-button" data-toggle="modal" data-target="#node-selector">
              <%= @topic.node&.name || '选择分类...' %>
            </button>
            <%= f.hidden_field :node_id %>
          </div>
          <%= f.text_field :title, class: 'form-control', placeholder: '在这里填写标题', size: 80, maxlength: 32 %>
        </div>
      </div>

      <div><%= f.kindeditor :body, simple_mode: true, owner: @topic %></div>

      <div class="form-group"><%= f.submit '提交', data: { disable_with: '提交中..' }, class: 'btn btn-primary' %></div>
    <% end %>
  </div>
</div>
</div>
