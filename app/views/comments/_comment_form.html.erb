<%= button_tag "我有话要说", class: "btn btn-default start-comment-btn", 'data-id' => reply.id %>
<%= form_for(Comment.new, remote: :true, url: topic_reply_comments_path(@topic, reply), data: {id: reply.id}) do |f| %>
  <%= f.text_area :body, minlength: 2 %>
  <%= f.hidden_field :reply_id, value: reply.id %>
  <%= f.submit '提交', class: 'btn btn-primary submit-comment-btn' %>
<% end %>